<%= form_for @product, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :companyName, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :companyName, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :Address, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :Address, :class => 'text_area',  :style =>"height:300px;" %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :webAddress, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :webAddress, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :photo_file_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :photo_file_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :photo_content_type, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :photo_content_type, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :photo_file_size, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :photo_file_size, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :photo_updated_at, :class => 'control-label' %>
    <div class="controls">
      <%= f.datetime_select :photo_updated_at, :class => 'datetime_select' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                product_path, :class => 'btn' %>
  </div>
<% end %>
